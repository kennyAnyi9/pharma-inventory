{
  "framework": "nextjs",
  "buildCommand": "cd ../.. && pnpm build --filter=web...",
  "installCommand": "cd ../.. && pnpm install",
  "outputDirectory": ".next",
  "crons": [
    {
      "path": "/api/cron/calculate-reorder-levels",
      "schedule": "0 2 * * *"
    },
    {
      "path": "/api/cron/daily-alerts", 
      "schedule": "0 6 * * *"
    },
    {
      "path": "/api/cron/generate-daily-report",
      "schedule": "0 7 * * *"
    }
  ]
}